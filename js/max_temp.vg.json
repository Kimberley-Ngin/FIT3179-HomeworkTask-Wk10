{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Annual Maximum Temperature in Australia by Capital City",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-HomeworkTask-Wk10/refs/heads/main/data/annual_max_temp%20copy.csv"
  },
  "params": [
    {
      "name": "city_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Darwin",
          "Brisbane",
          "Sydney",
          "Canberra",
          "Melbourne",
          "Adelaide",
          "Hobart",
          "Perth"
        ],
        "labels": [
          "Show All",
          "Darwin",
          "Brisbane",
          "Sydney",
          "Canberra",
          "Melbourne",
          "Adelaide",
          "Hobart",
          "Perth"
        ],
        "name": "City Selection: "
      }
    },
    {
      "name": "Year_Above",
      "value": 2010,
      "bind": {
      "input": "range",
      "min": 2005,
      "max": 2023,
      "step": 1,
      "name": "Year: "
      }
      }
  ],
  "transform": [
    {
      "filter": "city_selection == null || datum.state == city_selection"
    },
    {
      "filter": "datum.year > Year_Above"
    }
  ],
  "layer": [
    {
      "mark": "bar",
      "encoding": {
        "x": {
          "field": "year",
          "type": "nominal",
          "title": "Year"
        },
        "y": {
          "field": "avg_max_temp",
          "type": "quantitative",
          "title": "Annual Maximum Temperature"
        },
        "xOffset": {"field": "state"},
        "color": {
          "field": "state",
          "type": "nominal"
        },
        "opacity": {"value": 0.7}
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "red",
        "strokeWidth": 1.5
      },
      "encoding": {
        "y": {
          "aggregate": "average",
          "field": "avg_max_temp",
          "type": "quantitative"
        }
      }
    }
  ]
}
      
    
  