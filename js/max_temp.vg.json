{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Annual Maximum Temperature in Australia by Capital City",
  "width": 800,
  "height": 400,
  "data": {
    "url": "https://raw.githubusercontent.com/Kimberley-Ngin/FIT3179-HomeworkTask-Wk10/refs/heads/main/data/annual_max_temp%20copy.csv"
  },
  "params": [
    {
      "name": "city_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Darwin",
          "Brisbane",
          "Sydney",
          "Canberra",
          "Melbourne",
          "Adelaide",
          "Hobart",
          "Perth"
        ],
        "labels": [
          "Show All",
          "Darwin",
          "Brisbane",
          "Sydney",
          "Canberra",
          "Melbourne",
          "Adelaide",
          "Hobart",
          "Perth"
        ],
        "name": "City Selection: "
      }
    },
    {
      "name": "Year_Above",
      "value": 2005,
      "bind": {
      "input": "range",
      "min": 2005,
      "max": 2023,
      "step": 1,
      "name": "Year: "
      }
      }
  ],
  "transform": [
    {
      "filter": "city_selection == null || datum.state == city_selection"
    },
    {
      "filter": "datum.year > Year_Above"
    }
  ],
  "layer": [
    {
      "mark": {
            "type": "line",
            "interpolate": "monotone"
        },
      "encoding": {
        "x": {
          "timeUnit": {
              "unit": "year"
            },
          "field": "year",
          "type": "temporal",
          "title": "Year"
        },
        "y": {
          "field": "avg_max_temp",
          "type": "quantitative",
          "title": "Annual Maximum Temperature"
        },
        "color": {
          "field": "state",
          "type": "nominal"
        },
        "opacity": {"value": 0.6},
        "tooltip": [
            {
              "field": "year",
              "type": "temporal",
              "title": "Year",
              "format": "%Y"
            },
            {
              "field": "avg_max_temp",
              "type": "quantitative",
              "title": "Annual Maximmum Temperature"
            },
            {
              "field": "state",
              "type": "nominal",
              "title": "Capital City"
            }
          ]
      }
    },
    {
      "mark": {
        "type": "rule",
        "color": "red",
        "strokeWidth": 1.5
      },
      "encoding": {
        "y": {
          "aggregate": "average",
          "field": "avg_max_temp",
          "type": "quantitative"
        }
      }
    },
    {
      "mark": {"type": "text", "fontSize" : 11, "fontWeight":"bold", "align" : "left"},
      "transform": [
        {
          "aggregate": [{
           "op": "average",
           "field": "avg_max_temp",
           "as": "mean_y_axis"
          }]
        }
      ],      
      "encoding": {
        "text": {"value": "Average"},
        "y": {"field": "mean_y_axis",
              "type": "quantitative"}     
      }
    }
  ]
}
      
    
  